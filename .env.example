# ============================================
# WHATSAPP CONFIGURATION
# ============================================
# Get these credentials from Meta Business Platform
# https://developers.facebook.com/apps/

# Your WhatsApp Access Token (from Meta Business Account)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here

# Your Phone Number ID (from WhatsApp Business Account)
# This is the ID of the phone number where the bot will send/receive messages
WHATSAPP_PHONE_NUMBER_ID=945940578601053

# Your WhatsApp Business Account ID (from Meta Business Account)
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# WhatsApp API Version
WHATSAPP_API_VERSION=v22.0

# Webhook Verification Token (create a random string - change this!)
# This token is used to verify webhook requests from Meta
VERIFY_TOKEN=your_secure_verify_token_here_change_this_to_something_random

# ============================================
# WHATSAPP FLOW IDs
# ============================================
# Get these Flow IDs from your WhatsApp Business Account
# These are the forms that users will fill out

# 8A Form Flow ID
WHATSAPP_FLOW_ID_8A=1234567890

# 7/12 Form Flow ID
WHATSAPP_FLOW_ID_712=1234567891

# Ferfar Form Flow ID
WHATSAPP_FLOW_ID_FERFAR=1234567892

# Property Card Form Flow ID
WHATSAPP_FLOW_ID_PROPERTY=1234567893

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port the server runs on
PORT=3000

# Environment (development or production)
NODE_ENV=development

# Base URL for your application
# For local development with ngrok:
BASE_URL=http://localhost:3000

# For production:
# BASE_URL=https://your-ngrok-url.ngrok.io

# ============================================
# PAYMENT GATEWAY (Razorpay)
# ============================================

# Razorpay API Key
RAZORPAY_KEY_ID=your_razorpay_key_id

# Razorpay API Secret
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# DATABASE
# ============================================

# Directory where JSON data is stored
DATA_DIR=./data
